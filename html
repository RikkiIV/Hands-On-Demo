    <button id="chirpButton">Press to Chirp</button>

    <audio id="chirpSound" src="communicator-chirp.mp3"></audio>

    <script>
        // Get references to the button and the audio element
        const chirpButton = document.getElementById('chirpButton');
        const chirpSound = document.getElementById('chirpSound');

        // Add event listener for the button click
        chirpButton.addEventListener('click', () => {
            chirpSound.play();
        });
    </script>

